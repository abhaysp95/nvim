{

	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"golang": {
			"command": "gopls",
			"filetypes": [
				"go"
			],
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/"
			]
		}
	},



	"coc.preferences.formatOnSaveFiletypes": [
	],



	// "markdown",

	// current function update automatically
	"coc.preferences.currentFunctionSymbolAutoUpdate": true,
	"coc.preferences.snippets.enable": true,
	"coc.preferences.hoverTarget": "float",

	//diagnostics
	"diagnostic.errorSign": "✗",
	"diagnostic.warningSign": "",
	"diagnostic.infoSign": "",
	"diagnostic.hintSign": "➤ ",
	"diagnostic.displayByAle": true,
	"diagnostic.messageTarget": "echo",
	"diagnostic.virtualTextCurrentLineOnly": true,

	"suggest.triggerAfterInsertEnter":true,
	"suggest.minTriggerInputLength": 2,
	"suggest.noselect": true,
	"codeLens.enable": true,
	"suggest.preferCompleteThanJumpPlaceholder": true,
	"suggest.snippetIndicator": " ►",
	"suggest.floatEnable": false,
	"signature.target": "echo",

	// html
	"html.suggest.ionic": false,
	"html.suggest.html5": true,

	// list
	"list.indicator": ">",
	"list.selectedSignText": " ",

	//snippets
	"snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snippets"],

	// python config
	"python.pythonPath": "python",
	"python.venvPath": "",
	"python.linting.enabled": true,
	"python.jediEnabled": false,
	// "python.jediPath": "/usr/lib/python3.8/site-packages",
	"python.linting.pylintEnabled": true,
	"python.formatting.provider": "black",
	"python.formatting.blackPath": "~/.local/bin/black",
	"python.linting.mypyEnabled": true,

	// java config
	"java.completion.enabled": true,
	"java.referencesCodeLens.enabled": true,
	"java.implementationsCodeLens.enabled": true,
	"java.home": "/usr/lib/jvm/java-11-openjdk/",
	"java.errors.incompleteClasspath.severity": "ignore",

	// javascript
	"javascript.referencesCodeLens.enable": true,
	"javascript.suggest.completeFunctionCalls": true,

	// explorer
	"explorer.width": 30,
	"explorer.icon.enableNerdfont": true,
	"explorer.previewAction.onHover": true,
	"explorer.keyMappings.global": {
		"<cr>": ["expandable?", "expand", "open"],
		"v": "open:vsplit"
	},
  "explorer.quitOnOpen": true,
  "java.format.settings.url": "/home/raytracer/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml"
}
